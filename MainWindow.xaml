<Window
    x:Class="ITTicketingKiosk.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="IT Help Desk - New Ticket"
    Width="1200"
    Height="750"
    WindowState="Maximized"
    Icon="pack://application:,,,/Assets/sugar_salem_ico.ico"
    Background="{StaticResource AppBackgroundBrush}"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Banner Section -->
                <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Image x:Name="BannerImage" 
                           Source="Assets/sugar_salem_technology_banner.png" 
                           MaxWidth="324"
                           MaxHeight="100"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"/>
                    <TextBlock x:Name="FallbackBanner"
                               Text="Sugar Salem School District - Technology Department"
                               FontSize="26"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               Foreground="{StaticResource PrimaryTextBrush}"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Page Title -->
                <Grid Grid.Column="1" Grid.Row="1" Margin="0,5,0,5">
                    <TextBlock Text="IT Support Ticket"
                               Style="{StaticResource PageTitleStyle}"
                               HorizontalAlignment="Center"/>
                </Grid>

                <!-- Left Panel - Instructions -->
                <Border Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Style="{StaticResource InsetPanelStyle}"
                        Margin="20,10,10,20"
                        Height="580"
                        VerticalAlignment="Top">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="📋 Instructions" 
                                           Style="{StaticResource SectionHeaderStyle}"/>

                                <TextBlock Text="1. Enter Username" 
                                           Style="{StaticResource InstructionTitleStyle}"/>
                                <TextBlock Text="Type your school username in the Username field." 
                                           Style="{StaticResource InstructionBodyStyle}"/>

                                <TextBlock Text="2. Search" 
                                           Style="{StaticResource InstructionTitleStyle}"/>
                                <TextBlock Text="Click the 'Search' button to find your information and devices." 
                                           Style="{StaticResource InstructionBodyStyle}"/>

                                <TextBlock Text="3. Select School" 
                                           Style="{StaticResource InstructionTitleStyle}"/>
                                <TextBlock Text="Choose your school affiliation from the dropdown. This will be automatically filled if found in the system." 
                                           Style="{StaticResource InstructionBodyStyle}"/>

                                <TextBlock Text="4. Select Device" 
                                           Style="{StaticResource InstructionTitleStyle}"/>
                                <TextBlock Text="Choose your device from the dropdown, or select 'Write In' to enter a custom device name." 
                                           Style="{StaticResource InstructionBodyStyle}"/>

                                <TextBlock Text="5. Describe Issue" 
                                           Style="{StaticResource InstructionTitleStyle}"/>
                                <TextBlock Text="Click Continue, then enter a subject (minimum 4 characters) and detailed description of the problem." 
                                           Style="{StaticResource InstructionBodyStyle}"/>

                                <TextBlock Text="6. Submit" 
                                           Style="{StaticResource InstructionTitleStyle}"/>
                                <TextBlock Text="Click 'Submit Ticket' to send your request to IT support." 
                                           Style="{StaticResource InstructionBodyStyle}"/>

                                <Border BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="0,1,0,0" 
                                        Margin="0,20,0,15"/>

                                <TextBlock Text="Need Help?" 
                                           Style="{StaticResource InstructionTitleStyle}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Contact IT Support if you have questions" 
                                           Style="{StaticResource InstructionBodyStyle}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Center Panel - Form (Paginated) -->
                    <Grid Grid.Column="1" Grid.Row="2" Margin="10,0,10,0" VerticalAlignment="Top">
                        <!-- Page 1: User Search -->
                        <StackPanel x:Name="Page1Content" Visibility="Visible" Margin="0,10,0,0">
                            <!-- Username Section -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Username:"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,10,0"/>
                                <Grid Grid.Column="1">
                                    <TextBox x:Name="UsernameTextBox"
                                             Style="{StaticResource StandardTextBoxStyle}"
                                             FontSize="18"
                                             MinHeight="40"
                                             PreviewKeyDown="UsernameTextBox_PreviewKeyDown"
                                             TextChanged="UsernameTextBox_TextChanged"
                                             GotFocus="UsernameTextBox_GotFocus"
                                             LostFocus="UsernameTextBox_LostFocus"/>

                                    <!-- Placeholder Text -->
                                    <TextBlock x:Name="UsernamePlaceholder"
                                               Text="Enter your school username..."
                                               FontSize="18"
                                               Foreground="#999999"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               IsHitTestVisible="False"
                                               Visibility="Visible"/>

                                    <!-- Autocomplete Popup -->
                                    <Popup x:Name="UsernameAutocompletePopup"
                                           PlacementTarget="{Binding ElementName=UsernameTextBox}"
                                           Placement="Bottom"
                                           StaysOpen="False"
                                           AllowsTransparency="True"
                                           Width="{Binding ElementName=UsernameTextBox, Path=ActualWidth}">
                                        <Border Background="White"
                                                BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                MaxHeight="288">
                                            <ListBox x:Name="UsernameAutocompleteList"
                                                     BorderThickness="0"
                                                     FontSize="16"
                                                     SelectionChanged="UsernameAutocompleteList_SelectionChanged"
                                                     MouseUp="UsernameAutocompleteList_MouseUp">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="12,14"/>
                                                        <Setter Property="MinHeight" Value="48"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Border x:Name="Border"
                                                                            Background="{TemplateBinding Background}"
                                                                            BorderThickness="0,0,0,1"
                                                                            BorderBrush="#E0E0E0"
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsSelected" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </Border>
                                    </Popup>
                                </Grid>
                                <Button x:Name="SearchButton"
                                        Grid.Column="2"
                                        Content="Search"
                                        Click="SearchButton_Click"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        FontSize="18"
                                        Padding="30,8,30,8"
                                        Margin="10,0,0,0"/>
                            </Grid>

                            <!-- User Information -->
                            <Border Style="{StaticResource InsetPanelStyle}"
                                    Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="User Information" 
                                               FontSize="18" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource PrimaryTextBrush}"
                                               Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Left Column: Name -->
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="Name:" 
                                                           Style="{StaticResource InfoLabelStyle}"
                                                           Margin="0,0,10,0"/>
                                                <TextBlock x:Name="NameLabel" 
                                                           Grid.Column="1"
                                                           Style="{StaticResource InfoValueStyle}"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Right Column: Email -->
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="Email:" 
                                                           Style="{StaticResource InfoLabelStyle}"
                                                           Margin="0,0,10,0"/>
                                                <TextBlock x:Name="EmailLabel" 
                                                           Grid.Column="1"
                                                           Style="{StaticResource InfoValueStyle}"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- School Affiliation and Device Selection Row -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <!-- School Affiliation (Left 50%) -->
                                <Grid Grid.Column="0" Margin="0,0,10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="School Affiliation:"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Margin="0,0,10,0"/>
                                    <Grid Grid.Column="1">
                                        <ComboBox x:Name="SchoolAffiliationComboBox"
                                                  Style="{StaticResource StandardComboBoxStyle}"
                                                  FontSize="16"
                                                  HorizontalAlignment="Stretch"
                                                  Height="40"
                                                  SelectionChanged="SchoolAffiliationComboBox_SelectionChanged"
                                                  DropDownOpened="SchoolAffiliationComboBox_DropDownOpened"
                                                  DropDownClosed="SchoolAffiliationComboBox_DropDownClosed"/>

                                        <!-- Placeholder Text -->
                                        <TextBlock x:Name="SchoolAffiliationPlaceholder"
                                                   Text="Select school..."
                                                   FontSize="16"
                                                   Foreground="#999999"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"
                                                   IsHitTestVisible="False"
                                                   Visibility="Visible"/>
                                    </Grid>
                                </Grid>

                                <!-- Device (Right 50%) -->
                                <Grid Grid.Column="1" Margin="10,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Device:"
                                               Style="{StaticResource FieldLabelStyle}"
                                               Margin="0,0,10,0"/>

                                    <Grid Grid.Column="1">
                                        <ComboBox x:Name="DeviceComboBox"
                                                  Style="{StaticResource StandardComboBoxStyle}"
                                                  FontSize="16"
                                                  HorizontalAlignment="Stretch"
                                                  Height="40"
                                                  IsEditable="False"
                                                  IsTextSearchEnabled="False"
                                                  StaysOpenOnEdit="True"
                                                  SelectionChanged="DeviceComboBox_SelectionChanged"
                                                  PreviewKeyDown="DeviceComboBox_PreviewKeyDown"
                                                  DropDownOpened="DeviceComboBox_DropDownOpened"
                                                  DropDownClosed="DeviceComboBox_DropDownClosed"/>

                                        <!-- Placeholder Text -->
                                        <TextBlock x:Name="DevicePlaceholder"
                                                   Text="Select device..."
                                                   FontSize="16"
                                                   Foreground="#999999"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"
                                                   IsHitTestVisible="False"
                                                   Visibility="Visible"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <!-- Continue Button -->
                            <Button x:Name="ContinueButton"
                                    Content="Continue" 
                                    Click="ContinueButton_Click"
                                    Style="{StaticResource SubmitButtonStyle}"
                                    HorizontalAlignment="Center"
                                    IsEnabled="False"
                                    Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Page 2: Ticket Details -->
                        <StackPanel x:Name="Page2Content" Visibility="Collapsed" Margin="0,10,0,0">
                            <!-- Subject (Full Width) -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Subject:"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,10,0"/>

                                <Grid Grid.Column="1">
                                    <TextBox x:Name="SubjectTextBox"
                                             Style="{StaticResource StandardTextBoxStyle}"
                                             FontSize="16"
                                             MinHeight="40"
                                             GotFocus="SubjectTextBox_GotFocus"
                                             LostFocus="SubjectTextBox_LostFocus"
                                             TextChanged="SubjectTextBox_TextChanged"/>

                                    <!-- Placeholder Text -->
                                    <TextBlock x:Name="SubjectPlaceholder"
                                               Text="Brief summary of the issue..."
                                               FontSize="16"
                                               Foreground="#999999"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               IsHitTestVisible="False"
                                               Visibility="Visible"/>
                                </Grid>
                            </Grid>

                            <!-- Description -->
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Description:"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,0,10"/>

                                <Grid Grid.Row="1">
                                    <TextBox x:Name="DescriptionTextBox"
                                             Style="{StaticResource StandardTextBoxStyle}"
                                             FontSize="16"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             VerticalContentAlignment="Top"
                                             Height="220"
                                             GotFocus="DescriptionTextBox_GotFocus"
                                             LostFocus="DescriptionTextBox_LostFocus"
                                             TextChanged="DescriptionTextBox_TextChanged"/>

                                    <!-- Placeholder Text -->
                                    <TextBlock x:Name="DescriptionPlaceholder"
                                               Text="Detailed description of the problem..."
                                               FontSize="16"
                                               Foreground="#999999"
                                               VerticalAlignment="Top"
                                               Margin="8,10,0,0"
                                               IsHitTestVisible="False"
                                               Visibility="Visible"/>
                                </Grid>
                            </Grid>

                            <!-- Submit Button -->
                            <Button x:Name="SubmitButton"
                                    Content="Submit Ticket"
                                    Click="SubmitButton_Click"
                                    Style="{StaticResource SubmitButtonStyle}"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Page 3: Add Comment to Existing Ticket -->
                        <StackPanel x:Name="Page3Content" Visibility="Collapsed" Margin="0,10,0,0">
                            <!-- Existing Ticket Info -->
                            <Border Style="{StaticResource InsetPanelStyle}" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Adding Comment to Existing Ticket"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource PrimaryTextBrush}"
                                               Margin="0,0,0,10"/>

                                    <!-- Ticket and Subject in same row (50/50 split) -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Ticket (Left 50%) -->
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Ticket:"
                                                       Style="{StaticResource InfoLabelStyle}"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock x:Name="ExistingTicketLabel"
                                                       Style="{StaticResource InfoValueStyle}"/>
                                        </StackPanel>

                                        <!-- Subject (Right 50%) -->
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="Subject:"
                                                       Style="{StaticResource InfoLabelStyle}"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock x:Name="ExistingTicketSubjectLabel"
                                                       Style="{StaticResource InfoValueStyle}"
                                                       FontSize="16"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Comment -->
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Add Comment:"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,0,10"/>

                                <Grid Grid.Row="1">
                                    <TextBox x:Name="CommentTextBox"
                                             Style="{StaticResource StandardTextBoxStyle}"
                                             FontSize="16"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             VerticalContentAlignment="Top"
                                             Height="220"
                                             GotFocus="CommentTextBox_GotFocus"
                                             LostFocus="CommentTextBox_LostFocus"
                                             TextChanged="CommentTextBox_TextChanged"/>

                                    <!-- Placeholder Text -->
                                    <TextBlock x:Name="CommentPlaceholder"
                                               Text="Add additional information or updates to your ticket..."
                                               FontSize="16"
                                               Foreground="#999999"
                                               VerticalAlignment="Top"
                                               Margin="8,10,0,0"
                                               IsHitTestVisible="False"
                                               Visibility="Visible"/>
                                </Grid>
                            </Grid>

                            <!-- Submit Comment Button -->
                            <Button x:Name="SubmitCommentButton"
                                    Content="Submit Comment"
                                    Click="SubmitCommentButton_Click"
                                    Style="{StaticResource SubmitButtonStyle}"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Right Panel - Status -->
                    <Border Grid.Column="2"
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Style="{StaticResource InsetPanelStyle}"
                            Margin="10,10,20,20"
                            Height="580"
                            VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Status Header -->
                            <TextBlock Grid.Row="0"
                                       Text="ℹ️ Status"
                                       Style="{StaticResource SectionHeaderStyle}"/>

                            <!-- Status Content -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          x:Name="StatusScrollViewer">
                                <TextBlock x:Name="StatusTextBlock"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                            </ScrollViewer>

                            <!-- Navigation Buttons (Bottom Left) -->
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Margin="0,10,0,0">
                                <Button x:Name="BackButton"
                                        Click="BackButton_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        VerticalAlignment="Center"
                                        Padding="10,8,10,8"
                                        IsEnabled="False"
                                        Margin="0,0,8,0"
                                        ToolTip="Previous Page">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                              Text="&#xE76B;"
                                              FontSize="18"/>
                                </Button>

                                <Button x:Name="ForwardButton"
                                        Click="ForwardButton_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        VerticalAlignment="Center"
                                        Padding="10,8,10,8"
                                        IsEnabled="False"
                                        Margin="0,0,8,0"
                                        ToolTip="Next Page">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                              Text="&#xE76C;"
                                              FontSize="18"/>
                                </Button>

                                <Button x:Name="ResetButton"
                                        Click="ResetButton_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        VerticalAlignment="Center"
                                        Padding="12,8,12,8"
                                        Margin="0,0,8,0"
                                        ToolTip="Reset Form">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                  Text="&#xE72C;"
                                                  FontSize="18"
                                                  Margin="0,0,8,0"/>
                                        <TextBlock Text="Reset" FontSize="16"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="SettingsButton"
                                        Click="SettingsButton_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        VerticalAlignment="Center"
                                        Padding="10,8,10,8"
                                        ToolTip="Settings">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                              Text="&#xE713;"
                                              FontSize="18"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
            </Grid>
        </ScrollViewer>

        <!-- Authentication Overlay -->
        <Grid x:Name="AuthOverlay" 
              Background="#F0FFFFFF" 
              Visibility="Visible">
            <Border Background="White"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="40"
                    MaxWidth="500"
                    MaxHeight="500"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Grid>
                    <!-- Settings Button (Top Right Corner) -->
                    <Button x:Name="AuthSettingsButton"
                            Click="SettingsButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Padding="10,8,10,8"
                            Margin="-30,-30,0,0"
                            ToolTip="Settings">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                  Text="&#xE713;"
                                  FontSize="16"/>
                    </Button>

                    <!-- Main Content -->
                    <StackPanel>
                        <!-- Lock Icon -->
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                  Text="&#xE72E;"
                                  FontSize="66"
                                  Foreground="{StaticResource AccentTextBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <!-- Title -->
                        <TextBlock Text="Authentication Required"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Description -->
                        <TextBlock x:Name="AuthDescriptionText"
                                   TextWrapping="Wrap"
                                   FontSize="16"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MaxWidth="350"
                                   Margin="0,0,0,20">
                            <Run Text="Please sign in with your NinjaOne account to access the ticketing system."/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="Your browser will open for authentication."/>
                        </TextBlock>

                        <!-- Status Text -->
                        <TextBlock x:Name="AuthStatusText"
                                   FontSize="15"
                                   Foreground="{StaticResource AccentTextBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Visibility="Collapsed"
                                   Margin="0,0,0,20"/>

                        <!-- Progress Ring (WPF doesn't have ProgressRing, using ProgressBar) -->
                        <ProgressBar x:Name="AuthProgressRing"
                                      Width="200"
                                      Height="20"
                                      IsIndeterminate="False"
                                      HorizontalAlignment="Center"
                                      Visibility="Collapsed"
                                      Margin="0,0,0,20"/>

                        <!-- Sign In Button -->
                        <Button x:Name="SignInButton"
                                Content="Sign In"
                                Click="SignInButton_Click"
                                Style="{StaticResource SubmitButtonStyle}"
                                HorizontalAlignment="Center"
                                Padding="50,12,50,12"
                                FontSize="18"
                                Margin="0,0,0,20"/>

                        <!-- Refresh Token Status -->
                        <TextBlock x:Name="TokenExpiryText"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
