<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- School Brand Colors -->
    <Color x:Key="SchoolGrey">#8B8B8B</Color>
    <Color x:Key="SchoolBlue">#1E5A96</Color>
    <Color x:Key="SchoolBlueDark">#0D3D6B</Color>
    <Color x:Key="SchoolBlueLight">#2E7BC4</Color>

    <!-- Background Colors -->
    <Color x:Key="AppBackgroundColor">#F5F7FA</Color>
    <Color x:Key="PanelBackgroundColor">#FFFFFF</Color>
    <Color x:Key="InsetPanelBackgroundColor">#EEF2F7</Color>
    <Color x:Key="HeaderBackgroundColor">#E8ECF1</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#1A1A1A</Color>
    <Color x:Key="SecondaryTextColor">#4A4A4A</Color>
    <Color x:Key="AccentTextColor">#1E5A96</Color>
    <Color x:Key="PlaceholderTextColor">#9A9A9A</Color>
    <Color x:Key="SelectionHighlightColor">#E8F0F8</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#C5CDD6</Color>
    <Color x:Key="BorderHoverColor">#9AA5B1</Color>
    <Color x:Key="InsetBorderColor">#B0B8C3</Color>
    <Color x:Key="FocusBorderColor">#1E5A96</Color>

    <!-- Button Colors -->
    <Color x:Key="AccentButtonBackgroundColor">#1E5A96</Color>
    <Color x:Key="AccentButtonHoverColor">#2E7BC4</Color>
    <Color x:Key="AccentButtonPressedColor">#0D3D6B</Color>
    <Color x:Key="AccentButtonTextColor">#FFFFFF</Color>

    <Color x:Key="SecondaryButtonBackgroundColor">#E8ECF1</Color>
    <Color x:Key="SecondaryButtonHoverColor">#D4DAE3</Color>
    <Color x:Key="SecondaryButtonPressedColor">#C5CDD6</Color>
    <Color x:Key="SecondaryButtonTextColor">#1A1A1A</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#2D7D46</Color>
    <Color x:Key="ErrorColor">#C42B1C</Color>
    <Color x:Key="WarningColor">#CA5010</Color>
    <Color x:Key="InfoColor">#1E5A96</Color>

    <!-- Brushes for easy binding -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
    <SolidColorBrush x:Key="InsetPanelBackgroundBrush" Color="{StaticResource InsetPanelBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="{StaticResource AccentTextColor}"/>
    <SolidColorBrush x:Key="PlaceholderTextBrush" Color="{StaticResource PlaceholderTextColor}"/>
    <SolidColorBrush x:Key="SelectionHighlightBrush" Color="{StaticResource SelectionHighlightColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}"/>
    <SolidColorBrush x:Key="InsetBorderBrush" Color="{StaticResource InsetBorderColor}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}"/>

    <SolidColorBrush x:Key="AccentButtonBackgroundBrush" Color="{StaticResource AccentButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="AccentButtonHoverBrush" Color="{StaticResource AccentButtonHoverColor}"/>
    <SolidColorBrush x:Key="AccentButtonPressedBrush" Color="{StaticResource AccentButtonPressedColor}"/>
    <SolidColorBrush x:Key="AccentButtonTextBrush" Color="{StaticResource AccentButtonTextColor}"/>

    <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="{StaticResource SecondaryButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="{StaticResource SecondaryButtonHoverColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonPressedBrush" Color="{StaticResource SecondaryButtonPressedColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonTextBrush" Color="{StaticResource SecondaryButtonTextColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <!-- School Brand Brushes -->
    <SolidColorBrush x:Key="SchoolGreyBrush" Color="{StaticResource SchoolGrey}"/>
    <SolidColorBrush x:Key="SchoolBlueBrush" Color="{StaticResource SchoolBlue}"/>
    <SolidColorBrush x:Key="SchoolBlueDarkBrush" Color="{StaticResource SchoolBlueDark}"/>
    <SolidColorBrush x:Key="SchoolBlueLightBrush" Color="{StaticResource SchoolBlueLight}"/>

</ResourceDictionary>
