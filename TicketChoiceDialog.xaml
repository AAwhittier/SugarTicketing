<Window
    x:Class="ITTicketingKiosk.TicketChoiceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Open Ticket Found"
    Width="550"
    SizeToContent="Height"
    WindowStartupLocation="Manual"
    Background="White"
    ResizeMode="NoResize"
    Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Area -->
        <StackPanel Grid.Row="0" Margin="30">
            <!-- Icon and Title -->
            <TextBlock Text="📋"
                       FontSize="48"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Open Ticket Found"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Ticket Information -->
            <Border Background="{StaticResource HeaderBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="You have an open ticket:"
                               FontSize="15"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="TicketIdTextBlock"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <TextBlock x:Name="TicketSubjectTextBlock"
                               FontSize="15"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource PrimaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Question -->
            <TextBlock Text="What would you like to do?"
                       FontSize="17"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Button Area -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Background="{StaticResource HeaderBackgroundBrush}"
                Padding="30,20">
            <StackPanel>
                <Button x:Name="ContinueTicketButton"
                        Content="Continue Existing Ticket"
                        Click="ContinueTicketButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="50"
                        FontSize="16"
                        Margin="0,0,0,10"/>

                <Button x:Name="NewTicketButton"
                        Content="File New Ticket"
                        Click="NewTicketButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Height="50"
                        FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
