<Window
    x:Class="ITTicketingKiosk.TicketSuccessDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ticket Submitted"
    Width="550"
    SizeToContent="Height"
    WindowStartupLocation="Manual"
    Background="White"
    ResizeMode="NoResize"
    Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Area -->
        <StackPanel Grid.Row="0" Margin="30">
            <!-- Icon and Title -->
            <TextBlock Text="✅"
                       FontSize="48"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Ticket Submitted Successfully!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Ticket Information -->
            <Border Background="{StaticResource HeaderBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="Your ticket has been created:"
                               FontSize="15"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="TicketIdTextBlock"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,5"/>

                    <TextBlock x:Name="ReceiptStatusTextBlock"
                               FontSize="14"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Button Area -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Background="{StaticResource HeaderBackgroundBrush}"
                Padding="30,20">
            <Button x:Name="OkButton"
                    Content="OK"
                    Click="OkButton_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Height="50"
                    FontSize="16"/>
        </Border>
    </Grid>
</Window>
