<Window
    x:Class="ITTicketingKiosk.ValidationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Validation Message"
    Width="550"
    SizeToContent="Height"
    WindowStartupLocation="Manual"
    Background="White"
    ResizeMode="NoResize"
    Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Area -->
        <StackPanel Grid.Row="0" Margin="30">
            <!-- Icon -->
            <TextBlock x:Name="IconTextBlock"
                       Text="⚠️"
                       FontSize="48"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Title -->
            <TextBlock x:Name="TitleTextBlock"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Message Content -->
            <Border Background="{StaticResource HeaderBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,0,0,25">
                <TextBlock x:Name="ContentTextBlock"
                           FontSize="15"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Button Area -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Background="{StaticResource HeaderBackgroundBrush}"
                Padding="30,20">
            <Button x:Name="OkButton"
                    Content="OK"
                    Click="OkButton_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Height="50"
                    FontSize="16"/>
        </Border>
    </Grid>
</Window>
